<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="reject_approval_view_form" model="ir.ui.view">
      <field name="name">reject.approval.view.form</field>
      <field name="model">reject.approval</field>
      <field name="arch" type="xml">
        <form string="Reject">
          <sheet>
            <group>
              <group>
                <field name="user_id" readonly="1"/>
                <field name="state"/>
                <field name="reject_reason"/>
              </group>
              <group>
                <field name="requested_by" invisible="1"/>
                <field name="requester" readonly="1"/>
              </group>
            </group>
          </sheet>
          <footer>
            <button string="Confirm" name="button_confirm" type="object" class="oe_highlight"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="act_view_reject_approval" model="ir.actions.act_window">
      <field name="name">Reject</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">reject.approval</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
  </data>
</odoo>