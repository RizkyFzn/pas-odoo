<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_material_request_form" model="ir.ui.view">
        <field name="name">apm.material.request.form</field>
        <field name="model">apm.material.request</field>
        <field name="arch" type="xml">
            <form string="Material Request">
                <header>
                    <button name="button_to_approve" invisible="state != 'draft'" string="Request Approval" type="object" class="oe_highlight"/>
                    <button name="button_approved" invisible="state != 'to_approve'" string="Approve" type="object" class="oe_highlight" />
                    <button name="button_done" invisible="state != 'approved'" string="Done" type="object" class="oe_highlight" />
                    <button name="button_rejected" invisible="state != 'to_approve'" string="Reject" type="object" />
                    <button name="action_pickup" invisible="state != 'approved' or mr_status != 'pickup'" string="Pickup" type="object" class="oe_highlight" />
                    <button name="action_return" invisible="state != 'approved' or mr_status != 'return'" string="Return" type="object" class="oe_highlight" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,done" statusbar_colors='{"approved":"blue","reject":"red"}' />
                    <field name="mr_status" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_stock_picking" type="object" class="oe_stat_button" icon="fa-truck" invisible="picking_count == 0">
                            <field string="Picking" name="picking_count" widget="statinfo"/>
                        </button>
                        <button name="action_view_purchase_request" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-shopping-cart" 
                            invisible= "purchase_request_count == 0">
                        <field string="Purchase Request" name="purchase_request_count" widget="statinfo"/>
                    </button>
                    </div>
                    
                    <!-- Summary Badge -->
                    <div class="badge rounded-pill text-bg-info float-end border-0 mb-2" 
                         invisible="not request_summary" style="margin-right: 10px;">
                        <field name="request_summary" nolabel="1"/>
                    </div>
                    
                    <div class="badge rounded-pill text-bg-success float-end border-0" invisible="mr_status != 'pickup' or is_late">Booked</div>
                    <div class="badge rounded-pill text-bg-danger float-end border-0" invisible="mr_status != 'pickup' or not is_late">Late Pickup</div>
                    <div class="badge rounded-pill text-bg-warning float-end border-0" invisible="mr_status != 'return' or is_late">Picked-up</div>
                    <div class="badge rounded-pill text-bg-danger float-end border-0" invisible="mr_status != 'return' or not is_late">Late Return</div>
                    <div class="badge rounded-pill text-bg-default float-end border-0" invisible="mr_status != 'returned'">Returned</div>
                    
                    <div class="oe_edit_only">
                        <label for="name" class="oe_inline" />
                    </div>
                    <h1>
                        <field name="is_editable" invisible="1"/>
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                    
                    <group>
                        <!-- GROUP 1: Field Baru + Existing -->
                        <group>
                            <field name="purchase_type" readonly="is_editable" required="1"/>
                            <field name="vessel_id" options="{'no_create': True}"/>
                            <field name="requested_by_id" options="{'no_create': True}" />
                            <field name="department_id" options="{'no_create': True}" required="1"/>
                            <field name="assigned_to_id" readonly="is_editable"/>
                            <field name="request_date" readonly="is_editable"/>
                            <field name="request_type" readonly="is_editable"/>
                            <field name="company_id" groups="base.group_multi_company" force_save="1" readonly="state != &quot;draft&quot;"/>
                        </group>

                        <!-- GROUP 2: Existing Fields -->
                        <group>
                            <field name="description" readonly="is_editable"/>
                            
                            <label for="request_warehouse_id" string="Request From"/>
                            <div name="request_warehouse_id">
                                <field name="request_warehouse_id" class="oe_inline" options="{'no_create': True}" readonly="is_editable" required="1"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="destination_id" class="oe_inline" options="{'no_create': True}" required="1" readonly="is_editable"/>
                            </div>

                            <field name="picking_type_id" />
                            <field name="location_dest_id" options="{'no_create': True}"/>

                            <field name="date_to" invisible="1"/>
                            <field name="date_from" string="Rental period" widget="daterange" options="{'end_date_field': 'date_to'}" readonly="is_editable"  invisible="request_type == 'inventory'"/>
                            <field name="number_of_days" readonly="is_editable" invisible="request_type == 'inventory'"/>                     
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Products">
                            <field name="line_ids" readonly="is_editable">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" domain="[('qty_available', '&gt;=', 1)]"/>
                                    <field name="name" />
                                    <field name="product_uom_qty" />
                                    <field name="move_quantity" string="Quantity Move"/>
                                    
                                    <field name="engine_type" width="100"/>
                                    <field name="interval_hour" width="80"/>
                                    <field name="for_machine_side" width="80" widget="badge"/>
                                    <field name="last_purchase_date" width="100"/>
                                    
                                    <field name="product_uom_category_id" column_invisible="1"/>
                                    <field name="product_uom_id" />
                                    <button type="object" name="action_product_forecast_report" title="Forecast Report" icon="fa-area-chart" invisible="not product_id or product_uom_qty == 0 or forecast_availability &lt;= 0"/>
                                    <button type="object" name="action_product_forecast_report" title="Forecast Report" icon="fa-area-chart text-danger" invisible="not product_id or product_uom_qty == 0 or forecast_availability &gt; 0"/>
                                </list>
                                
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="product_uom_qty"/>
                                                <field name="name"/>
                                                <field name="move_quantity"/>
                                                <field name="product_uom_id"/>
                                            </group>
                                            <group>
                                                <!-- ENGINE GROUP -->
                                                <field name="engine_type"/>
                                                <field name="interval_hour"/>
                                                <field name="for_machine_side"/>
                                                <field name="last_purchase_date" readonly="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group name="delivery">
                                <field name="delivery_status"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview"/>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- list/LIST VIEW -->
    <record id="view_material_request_list" model="ir.ui.view">
        <field name="name">apm.material.request.list</field>
        <field name="model">apm.material.request</field>
        <field name="arch" type="xml">
            <list>
                <!-- FIELD BARU (Optional) -->
                <field name="department_id" optional="hide"/>
                <field name="purchase_type" optional="hide" widget="badge" decoration-bf="purchase_type == 'kapal'"/>
                <field name="vessel_id" optional="hide"/>
                
                <field name="name" />
                <field name="description" />
                <field name="requested_by_id" widget="many2one_avatar_user" />
                <field name="state" widget="badge"/>
                <field name="assigned_to_id" />
                <field name="request_warehouse_id" />
                <field name="mr_status" widget="badge" decoration-danger="mr_status == 'return'" decoration-warning="mr_status == 'pickup'"/>
                <field name="mr_status_info" widget="badge" decoration-danger="mr_status_info in ('Late Return', 'Late Pickup')" decoration-warning="mr_status_info == 'Picked-up'" decoration-success="mr_status_info == 'Booked-up'"/>
            </list>
        </field>
    </record>
    
    <!-- SEARCH VIEW -->
    <record id="view_material_request_search" model="ir.ui.view">
        <field name="name">apm.material.request.list.select</field>
        <field name="model">apm.material.request</field>
        <field name="arch" type="xml">
            <search string="Search Material Request">
                <!-- FIELD BARU -->
                <field name="department_id"/>
                <field name="purchase_type"/>
                <field name="vessel_id"/>
                <separator />
                
                <field name="name" string="Material Request" />
                <separator />
                <field name="state" />
                <separator />
                
                <filter name="state_draft" string="Draft" domain="[('state','=','draft')]" help="Request is to be approved" />
                <filter name="state_to_approve" string="To Approve" domain="[('state','=','to_approve')]" help="Request is to be approved" />
                <filter name="state_approved" string="Approved" domain="[('state','=','approved')]" help="Request is approved" />
                <filter name="state_rejected" string="Rejected" domain="[('state','=','rejected')]" help="Request is rejected" />
                <filter name="state_done" string="Done" domain="[('state','=','done')]" help="Request is done" />
                
                <!-- FILTER BARU -->
                <separator/>
                <filter name="kapal_only" string="Kapal Only" domain="[('purchase_type', '=', 'kapal')]"/>
                <filter name="ga_only" string="G&amp;A Only" domain="[('purchase_type', '=', 'ga')]"/>
                
                <separator />
                <group expand="0" string="Group By...">
                    <!-- GROUP BY BARU -->
                    <filter name="group_dept" string="Department" icon="fa-building" context="{'group_by':'department_id'}"/>
                    <filter name="group_type" string="Purchase Type" icon="fa-shopping-cart" context="{'group_by':'purchase_type'}"/>
                    <filter name="group_vessel" string="Vessel" icon="fa-ship" context="{'group_by':'vessel_id'}"/>
                    
                    <filter name="requested_by_id" string="Requested by" icon="fa-user" domain="[]" context="{'group_by':'requested_by_id'}" />
                    <filter name="request_date" string="Start Date" icon="fa-calendar" domain="[]" context="{'group_by':'request_date'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record model="ir.actions.act_window" id="material_request_form_action">
        <field name="name">Material Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">apm.material.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_kapal_only': 1, 'search_default_requested_by_id': uid}</field>
    </record>
    
    <!-- MENU -->
    <menuitem id="menu_apm_material_request" 
              name="Material Request" 
              parent="stock.menu_stock_warehouse_mgmt" 
              sequence="1" 
              groups="group_apm_material_request_user,group_apm_material_request_manager"/>
    
    <menuitem id="material_request_menu" 
              name="PAS Material Request" 
              parent="menu_apm_material_request" 
              action="material_request_form_action"
              sequence="10"/>

</odoo>