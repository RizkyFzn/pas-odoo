<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_picking_form_apm_material_request" model="ir.ui.view">
            <field name="name">stock.picking.form.apm_material_request</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_view_material_request" type="object" class="oe_stat_button" icon="fa-cube" invisible="mr_count == 0">
                        <field string="Material Request" name="mr_count" widget="statinfo"/>
                    </button>
                </xpath>

                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="return_date" readonly="True" invisible="picking_type_code not in ('internal', 'incoming')"/>
                    <field name="shipment_condition" invisible="True"/>
                </xpath>

                <xpath expr="//div[hasclass('oe_button_box')]" position="after">
                    <widget name="web_ribbon" title="Partial" invisible="shipment_condition != -1"/>
                    <widget name="web_ribbon" title="Full" invisible="shipment_condition != 1"/>
                </xpath>
                
            </field>
        </record>
    
    </data>
    

</odoo>
