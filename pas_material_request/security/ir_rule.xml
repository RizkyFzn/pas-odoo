<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- Multi - Company Rules -->
    <record id="material_request_multi_company" model="ir.rule">
        <field name="name">Material Request multi-company</field>
        <field name="model_id" ref="model_apm_material_request"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="material_request_line_multi_company" model="ir.rule">
        <field name="name">Material Request Line multi-company</field>
        <field name="model_id" ref="model_apm_material_request_line"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
